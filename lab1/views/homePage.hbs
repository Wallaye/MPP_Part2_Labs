<!doctype html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <meta charset="UTF-8">
    <title>Главная страница</title>
</head>
<body>
    {{> menu}}
    <div class="container-fluid mt-3">
        <form method="post">
            <button type="submit" formaction="/newActivity" class="btn btn-dark">Добавить активность</button>
        </form>
        {{#if Empty}}
            <h2 class="text-center">Нет активностей</h2>
        {{else}}
            {{#each activities}}
                <div>
                    <h4>{{this.name}}</h4>
                    <a href="/?{{this.id}}"></a>
                </div>
            {{/each}}
        {{/if}}
    </div>
</body>
</html>