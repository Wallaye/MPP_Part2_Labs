<!doctype html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <meta charset="UTF-8">
    <title>Главная страница</title>
</head>
<body>
    {{> menu}}
    <div class="container-fluid mt-3">
        <form method="post">
            <button type="submit" formaction="/newActivity" class="btn btn-dark">Добавить активность</button>
        </form>
        {{#if Empty}}
            <h2 class="text-center">Нет активностей</h2>
        {{else}}
                <div>
                    <table class="table table-hover table-bordered">
                        <thead class="thead-light">
                        <tr><th>Имя</th><th>Проект</th><th>Дата и время начала</th>
                            <th>Дата и время конца</th><th>Завершена</th><th>Время</th></tr>
                        </thead>
                        <tbody>
                        {{#each activities}}
                            <tr>
                                <td><a href="/editActivity?id={{this.id}}">{{this.name}}</a></td>
                                <td>{{this.project}}</td>
                                <td>{{toDate this.startDate}}</td>
                                <td>{{toDate this.finishDate}}</td>
                                {{#if this.isFinished}}
                                    <td>Да</td>
                                    <td>{{getTimeToDate this.startDate this.finishDate}}</td>
                                {{else}}
                                    <td>Нет</td>
                                    <td>Ещё не завершено</td>
                                {{/if}}
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
        {{/if}}
    </div>
</body>
</html>